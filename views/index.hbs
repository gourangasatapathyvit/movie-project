<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="/static/css/style.css">
    <title>Movi-Hub</title>
</head>

<body ondragstart="return false;" ondrop="return false" oncopy="return false" oncut="return false">
    <div class="container">
        <nav class="navbar">
            <header class="__header">Hub</header>

            <ul class="nav__option">
                <li class="option">Home</li>
                <li class="option">Movies</li>
                <li class="option">Series</li>
                <li class="option">Watch Later</li>
                <li class="option">About</li>
            </ul>

            <div class="search-section">
                <form action="/" method="POST" id="search" class="form-inline">
                    <input name="moviename" type="text" class="form-control" id="search-input"
                        placeholder="Search Here">
                    <button class="button-11" role="button" type="">Search</button>
                </form>
            </div>

        </nav>

        <section class="sorting-style">
            <span id="table-view" class="material-symbols-outlined icon-size">apps</span>
            <span id="list-view" class="material-symbols-outlined icon-size">menu</span>
        </section>

        <section class="card-container">
            <div class="card-box-container">
                {{#each movieData}}
                <div class="card-box">
                    <h1>{{this.yearOfRelease}}</h1>
                    <img class="card-image" src="{{this.imagePath}}"
                        alt="{{this.title}}{{this.imdbRating}}">
                    <div class="card-main-footer">
                        <div class="card-info">
                            <h3>{{this.title}}</h3>
                        </div>

                        <div class="card-footer">
                            <a href="more-info/{{this._id}}">
                                <button class="button-11 card-footer-button" id="more-info">More Info</button>
                            </a>

                            <a href="more-info/moreInfo.html">
                                <button class="button-11 card-footer-button" id="fav-info">Watch Later</button>
                            </a>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>

            <div class="list-box-container">
                {{#each movieData}}
                <div class="list-box">
                    <h3>{{this.title}}</h3>
                    <div class="list-card-footer">
                        <a href="more-info/{{this._id}}">
                            <button class="button-11 card-footer-button" id="more-info">More Info</button>
                        </a>

                        <a href="more-info/moreInfo.html">
                            <button class="button-11 card-footer-button" id="fav-info">Watch Later</button>
                        </a>
                    </div>
                </div>
                {{/each}}
            </div>


        </section>

    </div>

    <script src="/static/js/script.js"></script>

</body>

</html>