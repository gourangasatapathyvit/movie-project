<section class="body-font">

    <div class="card-box-container remove-display">
        <div class="container px-5 py-12 mx-auto">

            {{!-- div boxes --}}
            <div class="flex flex-wrap -m-4">

                {{#each movieData}}
                <div class="p-4 md:w-1/4">
                    <div class="relative h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden">
                        <span class="absolute right-0 top-0 text-3xl"><i
                                class="{{this.bookMarkStatus}} fa-bookmark"></i></span>
                        {{!-- https://dummyimage.com/720x400 --}}
                        <img class="lg:h-48 md:h-36 w-full object-cover object-center" src="{{this.imagePath}}"
                            alt="blog">
                        <div class="p-4">
                            <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1">
                                {{this.yearOfRelease}}</h2>
                            <h1 class="title-font text-lg font-medium text-gray-900 mb-3">{{this.title}}</h1>
                            <div class="flex items-center flex-wrap ">
                                <a href="more-info/{{this._id}}"
                                    class="text-indigo-500 inline-flex items-center md:mb-2 lg:mb-0">More Info
                                    <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"
                                        fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M5 12h14"></path>
                                        <path d="M12 5l7 7-7 7"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </div>

    <div class="list-box-container remove-display">
        {{#each movieData}}
        <div class="list-box">
            <h3 class="sm:text-xl md:text-2xl">{{this.title}}</h3>
            <div class="list-card-footer">
                <a href="more-info/{{this._id}}">
                    <button
                        class="esm:hidden h-8 px-4 m-2 text-sm text-indigo-100 transition-colors duration-150 bg-indigo-700 rounded-lg focus:shadow-outline hover:bg-indigo-800">info</button>

                        <button class="hidden esm:block h-10 px-5 m-2 text-indigo-100 transition-colors duration-150 bg-indigo-700 rounded-lg focus:shadow-outline hover:bg-indigo-800">info</button>
                        
                </a>

                <a href="more-info/moreInfo.html">
                    <button
                        class="esm:hidden h-8 px-4 m-2 text-sm text-indigo-100 transition-colors duration-150 bg-indigo-700 rounded-lg focus:shadow-outline hover:bg-indigo-800">save</button>
                        
                        <button class="hidden esm:block h-10 px-5 m-2 text-indigo-100 transition-colors duration-150 bg-indigo-700 rounded-lg focus:shadow-outline hover:bg-indigo-800">save</button>
                </a>
            </div>
        </div>
        {{/each}}
    </div>

</section>